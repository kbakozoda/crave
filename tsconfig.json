{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018", "esnext.asynciterable"],
    "moduleResolution": "node",
    "baseUrl": "./",
    "importHelpers": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "rootDir": ".",
    "pretty": true,
    "typeRoots": [
        "node_modules/@types"
    ],
  },
  "include": [
      "./**/*", "./**/*.ts"
  ],
  "exclude": ["node_modules"]
}
